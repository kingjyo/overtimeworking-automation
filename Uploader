<body>
  <div class="container">
    <h1>ì—°ì¥ê·¼ë¬´ ì—‘ì…€ íŒŒì¼ ì—…ë¡œë”</h1>
    
    <div class="upload-area" id="uploadArea">
      <div class="upload-icon">ğŸ“</div>
      <div class="upload-text">ì—‘ì…€ íŒŒì¼ì„ ì—¬ê¸°ì— ë“œë˜ê·¸í•˜ì„¸ìš”</div>
      <div class="upload-subtext">ë˜ëŠ” í´ë¦­í•˜ì—¬ íŒŒì¼ ì„ íƒ</div>
      <input type="file" id="fileInput" multiple accept=".xlsx,.xls" />
    </div>
    
    <div class="file-list" id="fileList"></div>
    
    <button class="upload-button" id="uploadButton">ì—…ë¡œë“œ ì‹œì‘</button>
    
    <div class="progress-bar" id="progressBar">
      <div class="progress-fill" id="progressFill"></div>
    </div>
    
    <div class="error-message" id="errorMessage"></div>
    
    <div class="info-message">
      <strong>ì—…ë¡œë“œ ì•ˆë‚´</strong>
      <ul>
        <li>íŒŒì¼ëª…ì´ ì‹œíŠ¸ ì´ë¦„ì´ ë©ë‹ˆë‹¤ (ì˜ˆ: "2024ë…„ 10ì›” (ì¶•ì‚°).xlsx")</li>
        <li>ë‚ ì§œ ì—´ì€ ìë™ìœ¼ë¡œ YYYY-MM-DD í˜•ì‹ìœ¼ë¡œ ë³€í™˜ë©ë‹ˆë‹¤</li>
        <li>ì—¬ëŸ¬ íŒŒì¼ì„ í•œ ë²ˆì— ì—…ë¡œë“œí•  ìˆ˜ ìˆìŠµë‹ˆë‹¤</li>
      </ul>
    </div>
    
    <div class="toggle-debug" id="toggleDebug">ë””ë²„ê·¸ ì½˜ì†” í‘œì‹œ</div>
    <div class="debug-console" id="debugConsole"></div>
  </div>
  
  <script>
    let selectedFiles = [];
    let debugVisible = false;
    
    const uploadArea = document.getElementById('uploadArea');
    const fileInput = document.getElementById('fileInput');
    const fileList = document.getElementById('fileList');
    const uploadButton = document.getElementById('uploadButton');
    const progressBar = document.getElementById('progressBar');
    const progressFill = document.getElementById('progressFill');
    const debugConsole = document.getElementById('debugConsole');
    const toggleDebug = document.getElementById('toggleDebug');
    const errorMessage = document.getElementById('errorMessage');
    
    // ë””ë²„ê·¸ í† ê¸€
    toggleDebug.addEventListener('click', () => {
      debugVisible = !debugVisible;
      debugConsole.style.display = debugVisible ? 'block' : 'none';
      toggleDebug.textContent = debugVisible ? 'ë””ë²„ê·¸ ì½˜ì†” ìˆ¨ê¸°ê¸°' : 'ë””ë²„ê·¸ ì½˜ì†” í‘œì‹œ';
    });
    
    // ë””ë²„ê·¸ ë¡œê·¸ ì¶”ê°€
    function addDebugLog(message, type = 'info') {
      const line = document.createElement('div');
      line.className = `debug-line ${type}`;
      const timestamp = new Date().toLocaleTimeString();
      line.textContent = `[${timestamp}] ${message}`;
      debugConsole.appendChild(line);
      debugConsole.scrollTop = debugConsole.scrollHeight;
    }
    
    // ì—ëŸ¬ ë©”ì‹œì§€ í‘œì‹œ
    function showError(message) {
      errorMessage.textContent = message;
      errorMessage.style.display = 'block';
      setTimeout(() => {
        errorMessage.style.display = 'none';
      }, 5000);
    }
    
    // ë“œë˜ê·¸ ì•¤ ë“œë¡­ ì´ë²¤íŠ¸
    uploadArea.addEventListener('click', () => fileInput.click());
    
    uploadArea.addEventListener('dragover', (e) => {
      e.preventDefault();
      uploadArea.classList.add('dragging');
    });
    
    uploadArea.addEventListener('dragleave', () => {
      uploadArea.classList.remove('dragging');
    });
    
    uploadArea.addEventListener('drop', (e) => {
      e.preventDefault();
      uploadArea.classList.remove('dragging');
      handleFiles(e.dataTransfer.files);
    });
    
    fileInput.addEventListener('change', (e) => {
      handleFiles(e.target.files);
    });
    
    // íŒŒì¼ ì²˜ë¦¬
    function handleFiles(files) {
      selectedFiles = Array.from(files).filter(file => 
        file.name.endsWith('.xlsx') || file.name.endsWith('.xls')
      );
      
      if (selectedFiles.length === 0) {
        showError('ì—‘ì…€ íŒŒì¼ë§Œ ì—…ë¡œë“œí•  ìˆ˜ ìˆìŠµë‹ˆë‹¤.');
        return;
      }
      
      addDebugLog(`${selectedFiles.length}ê°œì˜ íŒŒì¼ì´ ì„ íƒë˜ì—ˆìŠµë‹ˆë‹¤.`, 'info');
      displayFiles();
      uploadButton.style.display = 'block';
    }
    
    // íŒŒì¼ ëª©ë¡ í‘œì‹œ
    function displayFiles() {
      fileList.innerHTML = '';
      selectedFiles.forEach((file, index) => {
        const fileItem = document.createElement('div');
        fileItem.className = 'file-item';
        fileItem.id = `file-${index}`;
        
        const fileName = document.createElement('div');
        fileName.className = 'file-name';
        fileName.textContent = file.name;
        
        const fileStatus = document.createElement('div');
        fileStatus.className = 'file-status';
        fileStatus.textContent = 'ëŒ€ê¸°ì¤‘';
        fileStatus.id = `status-${index}`;
        
        fileItem.appendChild(fileName);
        fileItem.appendChild(fileStatus);
        fileList.appendChild(fileItem);
      });
    }
    
    // ì—…ë¡œë“œ ë²„íŠ¼ í´ë¦­
    uploadButton.addEventListener('click', async () => {
      uploadButton.disabled = true;
      progressBar.style.display = 'block';
      addDebugLog('ì—…ë¡œë“œ ì‹œì‘...', 'info');
      
      for (let i = 0; i < selectedFiles.length; i++) {
        const file = selectedFiles[i];
        const fileItem = document.getElementById(`file-${i}`);
        const statusElement = document.getElementById(`status-${i}`);
        
        try {
          fileItem.className = 'file-item processing';
          statusElement.textContent = 'ì²˜ë¦¬ì¤‘...';
          addDebugLog(`${file.name} ì²˜ë¦¬ ì‹œì‘`, 'info');
          
          // íŒŒì¼ ì½ê¸°
          const reader = new FileReader();
          const fileData = await new Promise((resolve, reject) => {
            reader.onload = (e) => resolve(e.target.result);
            reader.onerror = reject;
            reader.readAsArrayBuffer(file);
          });
          
          // Base64ë¡œ ë³€í™˜
          const base64Data = btoa(
            new Uint8Array(fileData).reduce(
              (data, byte) => data + String.fromCharCode(byte), ''
            )
          );
          
          // ì‹œíŠ¸ ì´ë¦„ ì¶”ì¶œ (íŒŒì¼ëª…ì—ì„œ í™•ì¥ì ì œê±°)
          const sheetName = file.name.replace(/\.(xlsx|xls)$/, '');
          addDebugLog(`ì‹œíŠ¸ ì´ë¦„: ${sheetName}`, 'info');
          
          // Google Apps Scriptë¡œ ì „ì†¡
          await new Promise((resolve, reject) => {
            google.script.run
              .withSuccessHandler((result) => {
                fileItem.className = 'file-item success';
                statusElement.textContent = 'ì™„ë£Œ';
                addDebugLog(`${file.name} ì—…ë¡œë“œ ì„±ê³µ`, 'success');
                if (result.dateColumnsFixed) {
                  addDebugLog(`ë‚ ì§œ ì—´ ${result.dateColumnsFixed}ê°œ ìë™ ë³€í™˜ë¨`, 'info');
                }
                resolve();
              })
              .withFailureHandler((error) => {
                fileItem.className = 'file-item error';
                statusElement.textContent = `ì˜¤ë¥˜: ${error.message}`;
                addDebugLog(`${file.name} ì—…ë¡œë“œ ì‹¤íŒ¨: ${error.message}`, 'error');
                reject(error);
              })
              .uploadExcelFile(base64Data, sheetName);
          });
          
          // ì§„í–‰ë¥  ì—…ë°ì´íŠ¸
          const progress = ((i + 1) / selectedFiles.length) * 100;
          progressFill.style.width = `${progress}%`;
          
        } catch (error) {
          fileItem.className = 'file-item error';
          statusElement.textContent = 'ì˜¤ë¥˜ ë°œìƒ';
          addDebugLog(`${file.name} ì²˜ë¦¬ ì¤‘ ì˜¤ë¥˜: ${error.toString()}`, 'error');
        }
      }
      
      uploadButton.disabled = false;
      addDebugLog('ëª¨ë“  íŒŒì¼ ì²˜ë¦¬ ì™„ë£Œ', 'success');
      
      // 3ì´ˆ í›„ ë¦¬ì…‹
      setTimeout(() => {
        if (confirm('ëª¨ë“  íŒŒì¼ì´ ì²˜ë¦¬ë˜ì—ˆìŠµë‹ˆë‹¤. í™”ë©´ì„ ì´ˆê¸°í™”í•˜ì‹œê² ìŠµë‹ˆê¹Œ?')) {
          resetUploader();
        }
      }, 3000);
    });
    
    // ì—…ë¡œë” ì´ˆê¸°í™”
    function resetUploader() {
      selectedFiles = [];
      fileList.innerHTML = '';
      uploadButton.style.display = 'none';
      progressBar.style.display = 'none';
      progressFill.style.width = '0%';
      fileInput.value = '';
      addDebugLog('ì—…ë¡œë” ì´ˆê¸°í™”ë¨', 'info');
    }
  </script>
</body>
